.goods-item
  display: flex;
  height: 110px;
  align-items: center;
  font-size: 13px;
  padding: 2px 0 0 10px;
  border-top: 1px solid #efeff4;
.pic
  text-align: left;
  width: 34%;
  .avatar
    width: 100%;
    height: 74px;
.goods-content
  width: 70%;
  height: 80px;
  .goodsTitle
    font-size: 15px;
    line-height: 22px;
    text-align: left;
    padding-left: 3%;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
  .goods-content-detail
    width: 100%;
    display: flex;
    line-height: 15px;
    padding-top: 6px;
    .goodsLeft 
      width: 50%;
      text-align: left;
      padding-left: 4%;
    .goodsRight
      width: 50%;
      text-align: right ;
      padding-right : 4%;